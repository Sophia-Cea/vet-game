    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Form submission handling
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Yay! Thank you for your message! üéÄ I\'ll get back to you soon!');
            this.reset();
        });
        
        // Add floating animation to bubbles
        document.addEventListener('DOMContentLoaded', function() {
            const bubbles = document.querySelectorAll('.bubble');
            bubbles.forEach(bubble => {
                // Randomize bubble positions
                const randomSize = Math.random() * 60 + 30;
                const randomTop = Math.random() * 90 + 5;
                const randomLeft = Math.random() * 90 + 5;
                const randomDelay = Math.random() * 10;
                
                bubble.style.width = randomSize + 'px';
                bubble.style.height = randomSize + 'px';
                bubble.style.top = randomTop + '%';
                bubble.style.left = randomLeft + '%';
                
                // Start animation after a delay to create a staggered effect
                setTimeout(() => {
                    bubble.style.animation = `float ${Math.random() * 10 + 10}s infinite ease-in-out`;
                    bubble.style.animationDelay = `${randomDelay}s`;
                }, randomDelay * 100);
            });
        });
    </script>
</body>
</html>